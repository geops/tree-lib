{
  "name": "@geops/tree-lib",
  "description": "Library for tree recommendations.",
  "license": "MIT",
  "version": "0.3.0",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.umd.js",
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.0.2",
    "microbundle": "^0.11.0",
    "prettier": "^1.18.2"
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then yarn install --frozen-lockfile; fi",
      "post-merge": "yarn install --frozen-lockfile",
      "post-rebase": "yarn install"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint --fix",
      "prettier --write 'src/**/*.js'",
      "git add",
      "yarn test --bail --findRelatedTests --watchAll=false"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "scripts": {
    "data:transform": "yarn data:start && cd data && docker-compose exec db sh -c 'psql -U postgres -d tree -c \"SELECT import_projections(); SELECT export_projections()\"' && docker-compose down --remove-orphans --volumes",
    "data:start": "cd data && docker-compose down --remove-orphans --volumes && docker-compose up -d && sleep 9 && docker run --network=data_default --rm -v `pwd`/sql:/flyway/sql boxfuse/flyway:5-alpine -url=jdbc:postgresql://db:5432/tree -user=postgres migrate",
    "build": "microbundle",
    "lint": "microbundle && eslint src",
    "test": "microbundle && jest"
  },
  "dependencies": {
    "js-yaml": "^3.13.1"
  }
}
